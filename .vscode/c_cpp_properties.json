{
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/**",
                "C:/SDL/include",              // SDL3 headers
                "C:/SDL/include/SDL3",         // SDL3 main
                "C:/SDL/include/SDL3_image",   // SDL3_image
                "C:/SDL/include/SDL3_ttf"      // SDL3_ttf
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "windowsSdkVersion": "10.0.19041.0",
            "compilerPath": "${env:VSCODE_CXX_COMPILER_PATH}",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "windows-msvc-x64"
        }
    ],
    "version": 4
}
